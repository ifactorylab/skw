= form_for @item_size do |f|
  - if @item_size.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item_size.errors.count, "error")} prohibited this item_size from being saved:"
      %ul
        - @item_size.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :amount
    = f.number_field :amount
  .actions
    = f.submit 'Save'
