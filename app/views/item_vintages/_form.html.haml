= form_for @item_vintage do |f|
  - if @item_vintage.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item_vintage.errors.count, "error")} prohibited this item_vintage from being saved:"
      %ul
        - @item_vintage.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :year
    = f.number_field :year
  .actions
    = f.submit 'Save'
