%h1 Wine Repos

%table
  %tr
    %th Name
    %th Count
    %th
    %th
    %th

  - @repos.each do |repo|
    %tr
      %td= link_to repo.name, "/repos/#{repo.id}/items"
      %td= repo.items_count
      %td= link_to 'Edit', edit_repo_path(repo)
      %td= link_to 'Destroy', repo, :method => :delete, :data => { :confirm => 'Are you sure?' }

  - if @repos.count > 0
    %tr
      %td= link_to "All", "/repos/all/items"
      %td= all_repo_count(@repos)

%br

= link_to 'New Repo', new_repo_path
